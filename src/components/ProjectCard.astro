---
// This is a reusable component for displaying a single project.
// It accepts 'project' data as a property.
export interface Props {
  project: {
    title: string;
    description?: string;
    image_url: string;
  }
}
const { project } = Astro.props;
---
<div class="project-card-component">
  <img src={project.image_url} alt={project.title} class="project-card-image" />
  <div class="project-card-info">
    <h3 class="project-card-title">{project.title}</h3>
    {project.description && <p class="project-card-description">{project.description}</p>}
  </div>
</div>

<style>
  .project-card-component {
    background-color: var(--secondary-bg-color);
    border-radius: 16px;
    overflow: hidden;
    border: 1px solid var(--border-color);
    height: 100%; /* Ensure cards in a grid have the same height */
    display: flex;
    flex-direction: column;
  }
  .project-card-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }
  .project-card-info {
    padding: 1.25rem;
    flex-grow: 1; /* Allows info section to fill space */
  }
  .project-card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    color: var(--text-color);
  }
  .project-card-description {
    font-size: 0.95rem;
    color: var(--hint-color);
    line-height: 1.6;
    margin: 0;
  }
</style>